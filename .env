COMPOSE_PROJECT_NAME=receipt-agent
NODE_ENV=production

# ─── Postgres ───────────────────────────────────────────────────────────────
POSTGRES_USER=receipt_user
POSTGRES_PASSWORD=receipt_pass
POSTGRES_DB=receipt_ai
POSTGRES_PORT=5433
POSTGRES_HOST=postgres
DATABASE_URL=postgresql://receipt_user:receipt_pass@postgres:5432/receipt_ai

# ─── App Secrets ────────────────────────────────────────────────────────────
ADMIN_JWT_SECRET=change-me
SSE_SIGNING_SECRET=change-me-too

# ─── Networking ─────────────────────────────────────────────────────────────
FRONTEND_V2_BASE_URL=https://receipehelper2.khtain.com
ADMIN_V2_BASE_URL=https://receipehelper-admin2.khtain.com

# ─── SMTP Defaults (override in production) ─────────────────────────────────
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=bot@example.com
SMTP_PASSWORD=super-secret
EMAIL_FROM="Receipt AI Agent <bot@example.com>"
EMAIL_REPORT_TO=you@example.com

# ─── AI Providers ───────────────────────────────────────────────────────────
OPENROUTER_API_KEY=sk-or-your-key
AI_OCR_MODEL=anthropic/claude-3.5-sonnet
AI_ANALYSIS_MODEL=xai/grok-2-latest
AI_ANALYSIS_PROVIDER=openrouter
AI_ANALYSIS_ROLE="Certified Personal Finance Expert"

